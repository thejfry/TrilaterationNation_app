<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAnchorsActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteY="-1dp">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/btnNavMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:onClick="btnNavMain"
        android:text="Main Menu" />

    <Button
        android:id="@+id/btnNavAnchor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/btnNavMain"
        android:onClick="btnNavAnchor1"
        android:text="Anchor 1" />

    <Button
        android:id="@+id/btnNavAnchor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btnNavAnchor1"
        android:onClick="btnNavAnchor2"
        android:text="Anchor 2" />

    <Button
        android:id="@+id/btnNavAnchor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btnNavAnchor2"
        android:onClick="btnNavAnchor3"
        android:text="Anchor 3" />

    <Button
        android:id="@+id/btnNavAnchor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/btnNavAnchor3"
        android:onClick="btnNavAnchor4"
        android:text="Anchor 4" />

</RelativeLayout>